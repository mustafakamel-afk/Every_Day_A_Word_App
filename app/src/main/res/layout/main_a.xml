<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.ham.learn_e_2000_mk_liv.main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/the_word_of_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="كلمة اليوم :"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="mathematics"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="الرياضيات"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edit_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:hint="أكتب الكلمه"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="50dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/The_right_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_check_mark"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/The_wrong_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="40dp"
            android:text=""
            android:drawableRight="@drawable/ic_cancel_mark"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.2"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:onClick="sound"
            android:src="@drawable/volume_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.5"
            android:onClick="next"
            android:src="@drawable/next_style"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="2.3"
            android:onClick="next2"
            android:src="@drawable/next_style"
            android:visibility="gone" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_style_"
            android:gravity="center"
            android:onClick="button"
            android:padding="12dp"
            android:text="حسناً"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
